@model IEnumerable<WebApplication2.Models.EventFaculty>

<h3>Event Faculty - @ViewBag.EventName</h3>
<link rel="stylesheet" href="~/lib/Font-Awesome/css/font-awesome.css" />

@if(Model.Count() > 0)
{
    <table class="table table-striped">
        <tr>
            <td><strong>Name</strong></td>
            <td align="center"><strong>Completed Profile</strong></td>
            <td></td>
        </tr>
        @foreach (var eu in Model)
        {
            <tr>
                <td>@eu.User.LastName, @eu.User.FirstName</td>
                @if (eu.FilledOut == false)
                {
                    <td align="center"><span class="text-danger"><i class="fa fa-exclamation-circle"></i></span></td>
                }
                else
                {
                    <td align="center"><span class="text-success"><i class="fa fa-check"></i></span></td>
                }
                <td><a asp-action="EventFacultyManage" asp-controller="Admin" asp-route-id="@eu.Id">Manage</a></td>
            </tr>

        }
    </table>
}
<a asp-action="AddEventFaculty" asp-route-id="@ViewBag.EventId" class="btn btn-success">Add Faculty</a>
